{
  "name": "quikpik",
  "version": "0.0.10",
  "main": "./dist/quikpik.js",
  "types": "./types.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --dev --host 0.0.0.0 --port 3000",
    "test": "jest lib"
  },
  "files": [
    "dist/quikpik.js",
    "dist/quikpik.js.map",
    "types.d.ts"
  ],
  "author": "Christopher Davies <github@christophilus.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/plugin-transform-react-jsx": "7.10.1",
    "@babel/plugin-transform-runtime": "7.10.1",
    "@babel/polyfill": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "@rollup/plugin-babel": "5.0.3",
    "@rollup/plugin-commonjs": "12.0.0",
    "@rollup/plugin-node-resolve": "8.0.0",
    "@rollup/plugin-replace": "2.3.3",
    "@testing-library/jest-dom": "5.9.0",
    "@testing-library/svelte": "3.0.0",
    "autoprefixer": "9.8.0",
    "babel-jest": "26.0.1",
    "babel-plugin-inferno": "6.1.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-inferno": "1.3.1",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jsx": "0.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "inferno": "7.4.2",
    "inferno-test-utils": "7.4.2",
    "jest": "26.0.1",
    "postcss": "7.0.32",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "postcss-reporter": "6.0.1",
    "prettier": "2.0.5",
    "rollup": "2.3.4",
    "rollup-plugin-livereload": "1.3.0",
    "rollup-plugin-postcss": "3.1.2",
    "rollup-plugin-svelte": "5.0.3",
    "rollup-plugin-terser": "6.1.0",
    "sirv-cli": "0.4.4",
    "svelte": "3.0.0",
    "svelte-jester": "1.0.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "jsx",
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "error",
      "jsx/uses-factory": [
        1,
        {
          "pragma": "JSX"
        }
      ],
      "jsx/factory-in-scope": [
        0,
        {
          "pragma": "h"
        }
      ],
      "jsx/mark-used-vars": 1,
      "jsx/no-undef": 1
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ]
  }
}
