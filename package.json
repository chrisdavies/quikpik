{
  "name": "quikpik",
  "version": "0.0.3",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public"
  },
  "files": [
    "dist/quikpik.js",
    "dist/quikpik.js.map"
  ],
  "author": "Christopher Davies <github@christophilus.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "12.0.0",
    "@rollup/plugin-node-resolve": "8.0.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "prettier": "2.0.5",
    "rollup": "2.3.4",
    "rollup-plugin-livereload": "1.3.0",
    "rollup-plugin-svelte": "5.0.3",
    "rollup-plugin-terser": "5.1.2",
    "sirv-cli": "0.4.4",
    "svelte": "3.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "jsx",
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "error",
      "jsx/uses-factory": [
        1,
        {
          "pragma": "JSX"
        }
      ],
      "jsx/factory-in-scope": [
        0,
        {
          "pragma": "h"
        }
      ],
      "jsx/mark-used-vars": 1,
      "jsx/no-undef": 1
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  }
}
